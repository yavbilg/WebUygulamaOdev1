@*
  Sayfa: AI destekli egzersiz ve diyet önerisi alma formu
  
  Model: AIRecommendationViewModel - Kullanıcının fiziksel bilgileri ve hedefleri
  
  Bu sayfa kullanıcıların kişiselleştirilmiş fitness ve beslenme planı almak için
  boy, kilo, yaş, hedef gibi bilgilerini girmesini sağlar.
  AI teknolojisi ile bu bilgilere göre özel program oluşturulur.
*@

@* Model bağlama - AIRecommendationViewModel'i sayfaya bağla *@
@model FitnessCenterApp.ViewModels.AIRecommendationViewModel

@{
    // Sayfa başlığını ayarla
    ViewData["Title"] = "AI Egzersiz Önerisi";
}

@* Bootstrap grid sistemi - Sayfayı ortala *@
<div class="row justify-content-center">
    @* Orta boy ekranlarda 8 kolon genişliğinde alan *@
    <div class="col-md-8">
        @* Ana form kartı *@
        <div class="card shadow">
            @* Kart başlığı - Mavi arka plan, robot ikonu ile AI vurgusu *@
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    @* Robot ikonu - AI teknolojisini simgeler *@
                    <i class="fas fa-robot"></i> AI Destekli Egzersiz ve Diyet Önerisi
                </h2>
            </div>
            
            @* Kart gövdesi - Form alanları *@
            <div class="card-body">
                @* Bilgilendirme mesajı - Kullanıcıya talimat verir *@
                <div class="alert alert-info">
                    @* Bilgi ikonu *@
                    <i class="fas fa-info-circle"></i> Kişiselleştirilmiş egzersiz ve beslenme planı almak için bilgilerinizi girin.
                </div>

                @* Form - Dosya yükleme özelliği ile (enctype) *@
                <form asp-action="Recommendation" method="post" enctype="multipart/form-data">
                    @* Validasyon hatalarını göster *@
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    @* === Boy ve Kilo Alanları - İki sütunlu düzen === *@
                    <div class="row">
                        @* Sol sütun - Boy *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="Height" class="form-label"></label>
                            @* Input group - Birim (cm) ile birlikte gösterim *@
                            <div class="input-group">
                                @* Number input - Ondalık değer kabul eder (step="0.1") *@
                                <input asp-for="Height" class="form-control" type="number" step="0.1" placeholder="170" />
                                @* Birim etiketi - cm *@
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        @* Sağ sütun - Kilo *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="Weight" class="form-label"></label>
                            @* Input group - Birim (kg) ile birlikte gösterim *@
                            <div class="input-group">
                                @* Number input - Ondalık değer kabul eder *@
                                <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="70" />
                                @* Birim etiketi - kg *@
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>

                    @* === Yaş ve Vücut Tipi - İki sütunlu düzen === *@
                    <div class="row">
                        @* Sol sütun - Yaş *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            @* Sadece tam sayı (step yok), örnek değer 25 *@
                            <input asp-for="Age" class="form-control" type="number" placeholder="25" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        @* Sağ sütun - Vücut Tipi *@
                        <div class="col-md-6 mb-3">
                            <label asp-for="BodyType" class="form-label"></label>
                            @* Dropdown - Vücut tipi seçenekleri *@
                            <select asp-for="BodyType" class="form-select">
                                @* Varsayılan boş seçenek *@
                                <option value="">-- Seçiniz --</option>
                                @* Ektomorf - Zayıf, uzun, hızlı metabolizma *@
                                <option value="Ektomorf">Ektomorf (İnce yapılı)</option>
                                @* Mezomorf - Kas yapısı kolay geliştirilebilir, atletik *@
                                <option value="Mezomorf">Mezomorf (Atletik)</option>
                                @* Endomorf - Geniş kemik yapısı, yavaş metabolizma *@
                                <option value="Endomorf">Endomorf (Geniş yapılı)</option>
                            </select>
                            <span asp-validation-for="BodyType" class="text-danger"></span>
                        </div>
                    </div>

                    @* === Fitness Hedefi Seçimi === *@
                    @* Kullanıcının ulaşmak istediği hedef - Program buna göre özelleştirilir *@
                    <div class="mb-3">
                        <label asp-for="Goal" class="form-label"></label>
                        @* Dropdown - Hedef seçenekleri *@
                        <select asp-for="Goal" class="form-select">
                            <option value="">-- Hedef Seçiniz --</option>
                            @* Kilo verme hedefi - Kalori açığı, kardio ağırlıklı *@
                            <option value="Kilo verme">Kilo Verme</option>
                            @* Kas geliştirme hedefi - Protein ağırlıklı, ağırlık antrenmanı *@
                            <option value="Kas geliştirme">Kas Geliştirme</option>
                            @* Dayanıklılık hedefi - Kardiyovasküler egzersizler *@
                            <option value="Dayanıklılık">Dayanıklılık Artırma</option>
                            @* Esneklik hedefi - Yoga, pilates, stretching *@
                            <option value="Esneklik">Esneklik ve Denge</option>
                            @* Genel fitness - Dengeli bir program *@
                            <option value="Genel fitness">Genel Fitness</option>
                        </select>
                        <span asp-validation-for="Goal" class="text-danger"></span>
                    </div>

                    @* === Fotoğraf Yükleme (Opsiyonel) === *@
                    @* Kullanıcı vücut fotoğrafı yükleyerek daha detaylı analiz alabilir *@
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        @* File input - Sadece resim dosyaları kabul eder (accept="image/*") *@
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        
                        @* Yardımcı metin - Kullanıcıya bilgi verir *@
                        <div class="form-text">
                            @* Kamera ikonu *@
                            <i class="fas fa-camera"></i> Opsiyonel: Vücut fotoğrafı yükleyerek daha detaylı analiz alabilirsiniz
                        </div>
                    </div>

                    @* === Form Butonları === *@
                    <div class="d-grid gap-2">
                        @* Submit butonu - AI önerisi almak için formu gönderir *@
                        <button type="submit" class="btn btn-primary btn-lg">
                            @* Sihirli değnek ikonu - AI'nın "sihirli" özelliğini vurgular *@
                            <i class="fas fa-magic"></i> AI Önerisi Al
                        </button>
                        
                        @* Geçmiş öneriler butonu - Kullanıcının daha önce aldığı önerileri gösterir *@
                        <a asp-action="History" class="btn btn-outline-secondary">
                            @* Tarih/geçmiş ikonu *@
                            <i class="fas fa-history"></i> Geçmiş Önerilerim
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @* === Bilgilendirme Kartı - Özellikler === *@
        @* AI sisteminin sunduğu özellikleri listeler *@
        <div class="card mt-4 shadow">
            <div class="card-body">
                <h5>
                    @* Ampul ikonu - Fikir/özellik belirtir *@
                    <i class="fas fa-lightbulb"></i> Özellikler
                </h5>
                @* Özellik listesi *@
                <ul>
                    @* Her özellik yeşil onay işareti ile *@
                    <li>
                        <i class="fas fa-check text-success"></i> Kişiselleştirilmiş 12 haftalık egzersiz programı
                    </li>
                    <li>
                        <i class="fas fa-check text-success"></i> BMI hesaplaması ve analizi
                    </li>
                    <li>
                        <i class="fas fa-check text-success"></i> Detaylı beslenme önerileri
                    </li>
                    <li>
                        <i class="fas fa-check text-success"></i> Günlük kalori ihtiyacı hesaplama
                    </li>
                    <li>
                        <i class="fas fa-check text-success"></i> Hedef odaklı program tasarımı
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@* === JavaScript Bölümü === *@
@section Scripts {
    @* jQuery Validation scriptlerini ekle - İstemci tarafı form doğrulama *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
