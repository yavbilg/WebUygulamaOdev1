@model FitnessCenterApp.ViewModels.AIRecommendationViewModel

@{
    ViewData["Title"] = "AI Egzersiz Önerisi";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><i class="fas fa-robot"></i> AI Destekli Egzersiz ve Diyet Önerisi</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Ki?iselle?tirilmi? egzersiz ve beslenme plan? almak için bilgilerinizi girin.
                </div>

                <form asp-action="Recommendation" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Height" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Height" class="form-control" type="number" step="0.1" placeholder="170" />
                                <span class="input-group-text">cm</span>
                            </div>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Weight" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="70" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" class="form-control" type="number" placeholder="25" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="BodyType" class="form-label"></label>
                            <select asp-for="BodyType" class="form-select">
                                <option value="">-- Seçiniz --</option>
                                <option value="Ektomorf">Ektomorf (?nce yap?l?)</option>
                                <option value="Mezomorf">Mezomorf (Atletik)</option>
                                <option value="Endomorf">Endomorf (Geni? yap?l?)</option>
                            </select>
                            <span asp-validation-for="BodyType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Goal" class="form-label"></label>
                        <select asp-for="Goal" class="form-select">
                            <option value="">-- Hedef Seçiniz --</option>
                            <option value="Kilo verme">Kilo Verme</option>
                            <option value="Kas geli?tirme">Kas Geli?tirme</option>
                            <option value="Dayan?kl?l?k">Dayan?kl?l?k Art?rma</option>
                            <option value="Esneklik">Esneklik ve Denge</option>
                            <option value="Genel fitness">Genel Fitness</option>
                        </select>
                        <span asp-validation-for="Goal" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-camera"></i> Opsiyonel: Vücut foto?raf? yükleyerek daha detayl? analiz alabilirsiniz
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-magic"></i> AI Önerisi Al
                        </button>
                        <a asp-action="History" class="btn btn-outline-secondary">
                            <i class="fas fa-history"></i> Geçmi? Önerilerim
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4 shadow">
            <div class="card-body">
                <h5><i class="fas fa-lightbulb"></i> Özellikler</h5>
                <ul>
                    <li><i class="fas fa-check text-success"></i> Ki?iselle?tirilmi? 12 haftal?k egzersiz program?</li>
                    <li><i class="fas fa-check text-success"></i> BMI hesaplamas? ve analizi</li>
                    <li><i class="fas fa-check text-success"></i> Detayl? beslenme önerileri</li>
                    <li><i class="fas fa-check text-success"></i> Günlük kalori ihtiyac? hesaplama</li>
                    <li><i class="fas fa-check text-success"></i> Hedef odakl? program tasar?m?</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
