@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats;
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-tachometer-alt"></i> Yönetim Paneli</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Üye</h6>
                        <h2>@stats.TotalMembers</h2>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer">
                <a href="#" class="text-white text-decoration-none">Detaylar? Gör <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Antrenörler</h6>
                        <h2>@stats.TotalTrainers</h2>
                    </div>
                    <i class="fas fa-user-tie fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Trainers" class="text-white text-decoration-none">Yönet <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Randevu</h6>
                        <h2>@stats.TotalAppointments</h2>
                    </div>
                    <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Appointments" class="text-white text-decoration-none">Görüntüle <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Bekleyen Randevu</h6>
                        <h2>@stats.PendingAppointments</h2>
                    </div>
                    <i class="fas fa-clock fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Appointments" class="text-white text-decoration-none">Onayla <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-tasks"></i> H?zl? ??lemler</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-action="CreateFitnessCenter" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-plus-circle"></i><br />Yeni Salon Ekle
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="CreateTrainer" class="btn btn-outline-success btn-lg w-100">
                            <i class="fas fa-user-plus"></i><br />Yeni Antrenör Ekle
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="CreateService" class="btn btn-outline-info btn-lg w-100">
                            <i class="fas fa-plus-square"></i><br />Yeni Hizmet Ekle
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Appointments" class="btn btn-outline-warning btn-lg w-100">
                            <i class="fas fa-calendar-alt"></i><br />Randevular? Yönet
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
