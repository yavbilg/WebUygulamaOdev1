@model IEnumerable<FitnessCenterApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-user-tie"></i> Antrenörler</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateTrainer" class="btn btn-success">
            <i class="fas fa-plus"></i> Yeni Antrenör Ekle
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Uzmanlık</th>
                    <th>Deneyim</th>
                    <th>Salon</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td>@trainer.FirstName @trainer.LastName</td>
                        <td>@trainer.Email</td>
                        <td>@trainer.PhoneNumber</td>
                        <td>@trainer.Specialization</td>
                        <td>@trainer.ExperienceYears yıl</td>
                        <td>@trainer.FitnessCenter?.Name</td>
                        <td>
                            @if (trainer.IsAvailable)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditTrainer" asp-route-id="@trainer.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="DeleteTrainer" asp-route-id="@trainer.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Bu antrenörü silmek istediğinizden emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Henüz antrenör eklenmemiş.
    </div>
}
