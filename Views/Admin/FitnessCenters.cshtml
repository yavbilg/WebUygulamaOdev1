@model IEnumerable<FitnessCenterApp.Models.FitnessCenter>

@{
    ViewData["Title"] = "Fitness Salonları";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-building"></i> Fitness Salonları</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateFitnessCenter" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Salon Ekle
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var center in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-header @(center.IsActive ? "bg-success" : "bg-secondary") text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marker-alt"></i> @center.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><i class="fas fa-map-pin"></i> Adres:</strong><br />
                            @center.Address
                        </p>
                        
                        @if (!string.IsNullOrEmpty(center.PhoneNumber))
                        {
                            <p class="card-text">
                                <strong><i class="fas fa-phone"></i> Telefon:</strong> @center.PhoneNumber
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(center.Email))
                        {
                            <p class="card-text">
                                <strong><i class="fas fa-envelope"></i> Email:</strong> @center.Email
                            </p>
                        }
                        
                        <p class="card-text">
                            <strong><i class="fas fa-clock"></i> Çalışma Saatleri:</strong><br />
                            @center.OpeningTime.ToString(@"hh\:mm") - @center.ClosingTime.ToString(@"hh\:mm")
                        </p>
                        
                        @if (!string.IsNullOrEmpty(center.Description))
                        {
                            <p class="card-text">
                                <strong><i class="fas fa-info-circle"></i> Açıklama:</strong><br />
                                @center.Description
                            </p>
                        }
                        
                        <p class="card-text">
                            <strong><i class="fas fa-toggle-on"></i> Durum:</strong>
                            @if (center.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditFitnessCenter" asp-route-id="@center.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <form asp-action="DeleteFitnessCenter" asp-route-id="@center.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Bu salonu silmek istediğinizden emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> Henüz salon eklenmemiş.
    </div>
}
