@model FitnessCenterApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header bg-gradient-primary text-white text-center">
                <h2 class="mb-0">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope text-primary"></i> Email Adresi
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock text-primary"></i> Şifre
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-key"></i>
                            </span>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            <i class="fas fa-check-circle"></i> Beni Hatırla
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Giriş Yap
                        </button>
                        <a asp-action="Register" class="btn btn-outline-secondary">
                            <i class="fas fa-user-plus"></i> Hesap Oluştur
                        </a>
                    </div>
                </form>

                <hr class="my-4">
                
                <div class="alert alert-info mb-0">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle"></i> Demo Hesaplar
                    </h6>
                    <hr>
                    <p class="mb-1">
                        <strong><i class="fas fa-user-shield"></i> Admin:</strong><br>
                        <code>ogrencinumarasi@sakarya.edu.tr</code> / <code>sau</code>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
