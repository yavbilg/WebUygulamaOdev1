@model FitnessCenterApp.ViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Yeni Randevu";
    var trainers = ViewBag.Trainers as List<FitnessCenterApp.Models.Trainer>;
    var services = ViewBag.Services as List<FitnessCenterApp.Models.Service>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0"><i class="fas fa-calendar-plus"></i> Yeni Randevu Olu?tur</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="TrainerId" class="form-label"></label>
                        <select asp-for="TrainerId" class="form-select" id="trainerSelect">
                            <option value="">-- Antrenör Seçin --</option>
                            @if (trainers != null)
                            {
                                foreach (var trainer in trainers)
                                {
                                    <option value="@trainer.Id">
                                        @trainer.FirstName @trainer.LastName - @trainer.Specialization
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="TrainerId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ServiceId" class="form-label"></label>
                        <select asp-for="ServiceId" class="form-select" id="serviceSelect">
                            <option value="">-- Hizmet Seçin --</option>
                            @if (services != null)
                            {
                                foreach (var service in services)
                                {
                                    <option value="@service.Id" data-duration="@service.DurationMinutes" data-price="@service.Price">
                                        @service.Name - @service.DurationMinutes dk - @service.Price.ToString("C")
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AppointmentDate" class="form-label"></label>
                        <input asp-for="AppointmentDate" class="form-control" type="date" id="appointmentDate" 
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StartTime" class="form-label"></label>
                        <select asp-for="StartTime" class="form-select" id="timeSelect">
                            <option value="">-- Önce tarih ve antrenör seçin --</option>
                        </select>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                        <div id="loadingSpinner" class="spinner-border spinner-border-sm text-primary d-none" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Varsa özel isteklerinizi belirtiniz..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div id="appointmentSummary" class="alert alert-info d-none">
                        <h5><i class="fas fa-info-circle"></i> Randevu Özeti</h5>
                        <p id="summaryText"></p>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar-check"></i> Randevu Olu?tur
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            $('#appointmentDate, #trainerSelect').change(function () {
                loadAvailableTimeSlots();
            });

            function loadAvailableTimeSlots() {
                var trainerId = $('#trainerSelect').val();
                var date = $('#appointmentDate').val();

                if (trainerId && date) {
                    $('#loadingSpinner').removeClass('d-none');
                    $('#timeSelect').prop('disabled', true);

                    $.ajax({
                        url: '@Url.Action("GetAvailableTimeSlots", "Appointments")',
                        type: 'GET',
                        data: { trainerId: trainerId, date: date },
                        success: function (data) {
                            $('#timeSelect').empty();
                            if (data.length > 0) {
                                $('#timeSelect').append('<option value="">-- Saat Seçin --</option>');
                                $.each(data, function (index, time) {
                                    $('#timeSelect').append('<option value="' + time + '">' + time + '</option>');
                                });
                            } else {
                                $('#timeSelect').append('<option value="">Bu tarihte müsait saat yok</option>');
                            }
                            $('#timeSelect').prop('disabled', false);
                            $('#loadingSpinner').addClass('d-none');
                        },
                        error: function () {
                            alert('Müsait saatler yüklenirken bir hata olu?tu.');
                            $('#loadingSpinner').addClass('d-none');
                            $('#timeSelect').prop('disabled', false);
                        }
                    });
                }
            }

            $('#serviceSelect, #timeSelect').change(function () {
                updateSummary();
            });

            function updateSummary() {
                var trainerText = $('#trainerSelect option:selected').text();
                var serviceText = $('#serviceSelect option:selected').text();
                var dateText = $('#appointmentDate').val();
                var timeText = $('#timeSelect').val();

                if (trainerText && serviceText && dateText && timeText) {
                    var summary = '<strong>Antrenör:</strong> ' + trainerText + '<br>' +
                                  '<strong>Hizmet:</strong> ' + serviceText + '<br>' +
                                  '<strong>Tarih:</strong> ' + dateText + '<br>' +
                                  '<strong>Saat:</strong> ' + timeText;
                    $('#summaryText').html(summary);
                    $('#appointmentSummary').removeClass('d-none');
                } else {
                    $('#appointmentSummary').addClass('d-none');
                }
            }
        });
    </script>
}
