@model IEnumerable<FitnessCenterApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-calendar-check"></i> Randevularım</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Randevu
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var appointment in Model)
        {
            var statusClass = appointment.Status switch
            {
                FitnessCenterApp.Models.AppointmentStatus.Pending => "warning",
                FitnessCenterApp.Models.AppointmentStatus.Confirmed => "success",
                FitnessCenterApp.Models.AppointmentStatus.Cancelled => "danger",
                FitnessCenterApp.Models.AppointmentStatus.Completed => "info",
                _ => "secondary"
            };

            var statusText = appointment.Status switch
            {
                FitnessCenterApp.Models.AppointmentStatus.Pending => "Bekliyor",
                FitnessCenterApp.Models.AppointmentStatus.Confirmed => "Onaylandı",
                FitnessCenterApp.Models.AppointmentStatus.Cancelled => "İptal Edildi",
                FitnessCenterApp.Models.AppointmentStatus.Completed => "Tamamlandı",
                _ => "Bilinmiyor"
            };

            <div class="col-md-6 mb-3">
                <div class="card shadow">
                    <div class="card-header bg-@statusClass text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar"></i> @appointment.AppointmentDate.ToString("dd MMMM yyyy")
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong><i class="fas fa-user-tie"></i> Antrenör:</strong> 
                            @appointment.Trainer?.FirstName @appointment.Trainer?.LastName<br />
                            
                            <strong><i class="fas fa-dumbbell"></i> Hizmet:</strong> 
                            @appointment.Service?.Name<br />
                            
                            <strong><i class="fas fa-clock"></i> Saat:</strong> 
                            @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")<br />
                            
                            <strong><i class="fas fa-hourglass-half"></i> Süre:</strong> 
                            @appointment.Service?.DurationMinutes dakika<br />
                            
                            <strong><i class="fas fa-money-bill-wave"></i> Ücret:</strong> 
                            @appointment.Service?.Price.ToString("C")<br />
                            
                            <strong><i class="fas fa-info-circle"></i> Durum:</strong> 
                            <span class="badge bg-@statusClass">@statusText</span>
                        </p>
                        
                        @if (!string.IsNullOrEmpty(appointment.Notes))
                        {
                            <p class="card-text">
                                <strong><i class="fas fa-sticky-note"></i> Not:</strong><br />
                                @appointment.Notes
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> Detaylar
                        </a>
                        
                        @if (appointment.Status == FitnessCenterApp.Models.AppointmentStatus.Pending || 
                             appointment.Status == FitnessCenterApp.Models.AppointmentStatus.Confirmed)
                        {
                            <form asp-action="Cancel" asp-route-id="@appointment.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-times"></i> İptal Et
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4><i class="fas fa-info-circle"></i> Henüz randevunuz bulunmamaktadır.</h4>
        <p>Yeni bir randevu oluşturmak için aşağıdaki butona tıklayın.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> İlk Randevunuzu Oluşturun
        </a>
    </div>
}
